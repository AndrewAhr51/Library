<div>
    <label>Title</label>
    <input type="text" name="title" value="<%=book.title%>">
</div>
<div>
    <label>Author</label>
    <% if(book.author != null && book.author !=='') {%>
    <select name="author">
        <% authors.forEach(author => { %>
           <% if (author.id === book.author.id) { %>
                <option selected label="<%= author.name%>" value="<%= author.id%>"></option>
           <% } else { %>
                <option  label="<%= author.name%>" value="<%= author.id%>"></option>        
           <% } %>
        <% }) %>
    </select>
    <% } else { %>
    <select name="author">
        <% authors.forEach(author => { %>
             <option  label="<%= author.name%>" value="<%= author.id%>"></option>        
        <% }) %>
    <% } %>    
    </select>
 </div>
<div>
    <label>Genre</label>
    <input type="text" name="genre" value="<%=book.genre%>">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%=book.description%></textarea>
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%=book.pageCount%>">
</div>
<div>
    <label>Published Date</label>
    <input type="Date" name="publishedDate" 
        value="<%=book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Read</label>
    <input  type="checkbox" name="read" value="<%=book.read%>">
</div>
<div>
    <label>Cover</label>
    <input class="filepond" type="file" name="cover">
</div>
